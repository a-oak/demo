    <script>
        //检测是否登陆，根据登陆情况改变用户菜单的显示
        function loginLayout(){
            $('.login').each(function(i,obj){
                obj.style.display ='block';
            })

            $('.logout').each(function(i,obj){
                obj.style.display ='none';
            })
        }
        function logoutLayout(){
            $('.login').each(function(i,obj){
                obj.style.display ='none';
            })

            $('.logout').each(function(i,obj){
                obj.style.display ='block';
            })
        }
	function onCaptcha(obj){
	    var oldsrc = obj.src.split('?')[0];
	    obj.src = oldsrc + '?t=' + Math.random(); 
	}
        $(document).ready(function(){
            $.ajax({
                url:'/getIsLogin',
                type:'GET',
                success:function(obj){
                    if(obj.isLogin)
                        loginLayout();
                    else
                        logoutLayout();
                },
                error:function(err){
                    console.log(err.responseJSON);
                }
            });
	    $('.CAPTCHA').each(function(i,obj){
	        obj.onclick = function(){onCaptcha(obj)};
	    });
        });
    </script>

