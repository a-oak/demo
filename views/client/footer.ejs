            }
        });
    }
    //Q:cn, tn, t, q 分别代表什么？
    function getMore(cn, tn, t, q, callback){
        var query = '';
        if(q && typeof q == 'object' && q != {}){
            for(var key in q)
                query += key + '=' + q[key] + '&';
        }
        query = query.substr(0, query.length - 1);
        var url = '/moreitem/' + t + '/' + cn + '/' + tn;
        submit(url, 'get', query, function(data){
            callback(data);
        });
    }

    //Ajax获取手机验证短信
    function getSmsByForm(url,d,succCB,errCB){
        $.ajax({
            url:url,
            type:'POST',
            data:d,
            success:function(data){
                succCB(data);
            },
            error:function(err){
                errCB(err.responseJSON);
            }
        });
    }


