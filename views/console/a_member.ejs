<%- include a_header %>

<!--START:main-->
<div class="col-sm-12" id="content">
    <div class="row">
        <h2 style="margin: 10px 20px">会员 </h2>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--本单元标题-->
                <div class="panel-heading">筛选</div>
                <!--本单元内容-->
                <div class="panel-body">
                    <form>
                        关键字：
                        <input type="text">

                        <button class="btn btn-info btn-sm">确定</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <!--本单元标题-->
                <div class="panel-heading">会员列表</div>
                <!--本单元内容-->
                <div class="panel-body">
                    <table class="table table-hover" style="width: 100%">
                        <thead>
                        <tr>
                            <th>邮箱</th>
                            <th>手机</th>
                            <th>昵称</th>
                            <th>详情</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% data.forEach(function(o, i){ %>
                        <tr>
                            <td><%= o.email %></td>
                            <td><%= o.cellphone %></td>
                            <td><%= o.nickname %></td>
                            <td><a class="btn btn-warning btn-sm" href="/a_detail/member/<%= o._id %>">detail</a></td>
                        </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END:main-->
<%- include ../part/page %>
<%- include a_footer %>