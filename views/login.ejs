<%- include header %>

<!--START:main-->
<!-- Docs page layout -->
<div id="content" style="background-image: url('/images/c_img/top_bg_blue.jpg')">
    <div class="container">
        <h1>会员登陆</h1>
    </div>
</div>

<div id="tab" class="container">
    <%= (!!locals.error)?error:'' %>
    <ul class="tab_menu">
        <li class="selected">手机</li>
        <li>邮箱</li>
    </ul>
    <div class="tab_box">
        <div>
            <form method="post" enctype='multipart/form-data' action="/loginSMS?redirect=/member">
                手机：<input type="number" name="cellphone">
                <br />
                密码：<input type="password" name="password">
                <br />
                <input type="submit" value="登陆">
            </form>
        </div>
        <div style="display: none">
            <form method="post" enctype='multipart/form-data' action="/login?redirect=/member">
                邮箱：<input type="email" name="email">
                <br />
                密码：<input type="password" name="password">
                <br />
                <input type="submit" value="登陆">
            </form>
        </div>
    </div>
</div>

<div class="container">
    <%= (!!locals.error)?error:'' %>
    <div>
        <form method="post" enctype='multipart/form-data' action="/login?redirect=/member">
            账号：<input type="text" name="id">
            <br />
            密码：<input type="password" name="password">
            <br />
            <input type="submit" value="登陆">
        </form>
    </div>
</div>

<!--END:main-->

<%- include footer %>