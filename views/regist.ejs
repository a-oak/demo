<%- include header %>
<!--START:main-->
<!-- Docs page layout -->
<div class="bs-docs-header" id="content" style="background-image: url('/images/c_img/top_bg_blue.jpg')">
    <div class="container">
        <h1 style="text-shadow: 2px 2px #202020">注册新会员</h1>
    </div>
</div>

<div id="tab" class="container bs-docs-container">
    <%= (!!locals.error)?error:'' %>
    <div>
        <ul class="tab_menu">
            <li class="selected">手机注册</li>
            <li>邮箱注册</li>
        </ul>
    </div>
    <div class="tab_box">
        <div>
            <form method="post" enctype='multipart/form-data' action="/registSMS">
                手机号：<input type="number" name="cellphone" id='cellphone'>
                <br />
                验证码：<input type="text" name="code" id='code'>
                <img class="CAPTCHA" src="/getCode"  alt="验证码" />
                <a id="getSMS" href="javascript: getSMS();">获取短信验证码</a>
                <div id='smsMsg'></div>
                短信验证：<input type="text" name="codeSMS">
                <br />
                设置密码：<input type="password" name="password">
                <br />
                <input type="submit" value="注册">
            </form>
        </div>
        <div style="display: none">
            <form method="post" enctype='multipart/form-data' action="/regist">
                邮箱：<input type="email" name="email">
                <br />
                密码：<input type="password" name="password">
                <br />
                昵称：<input type="text" name="nickname">
                <br />
                验证码：<input type="text" name="code">
                <img class="CAPTCHA" src="/getCode"  alt="验证码" />
                <br />
                <input type="submit" value="注册">
            </form>
        </div>
    </div>
</div>
<!--END:main-->
<script>
function getSucc(obj){
  console.log('succ',obj);
  document.getElementById('smsMsg').innerHTML = '验证码已经发送到手机';
}
function getErr(obj){
  console.log('err',obj);
  document.getElementById('smsMsg').innerHTML = '错误：'+obj.error;
}
function getSMS(){
  var d={};
  d.cellphone = document.getElementById('cellphone').value;
  d.code = document.getElementById('code').value;
  d.type = 'regist';
  getSmsByForm(d,getSucc,getErr);
}
</script>
<%- include footer %>