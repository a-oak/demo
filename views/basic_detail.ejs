<%- include header %>

<style type="text/css">
    .caption p {
        color: #b7b7b7;
    }
</style>

<!--START:main-->
<!-- Docs page layout -->
<div class="bs-docs-header" id="content">
    <div class="container">
        <h1 style="text-shadow: 2px 2px #202020">基础类型</h1>
        <p style="color: #ffffff">
            全部其他基础类型都由它派生
        </p>
    </div>
</div>

<div class="container bs-docs-container">

    <a href="/list/basic">返回列表</a>

    <div class="row">
        <div class="col-md-9" role="main">
            <div class="bs-docs-section">
                <h3 id="bookmark-1" class="page-header"><%= data.number %></h3>
                <div class="row">
                    <div class="col-md-6">
                        <img src="/images/upload/basic/<%= data.cover %>" alt="<%= data.number %>"
                                style="width: 100%;height: 100%">
                    </div>
                    <div class="col-md-6">
                        <p style="white-space: pre-line;font-size: 20px">
                            名称：<%= data.text %>
                            select：<%= data.select %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="bs-docs-section">
                <h3 id="bookmark-2" class="page-header">详情</h3>
                <p id="basic-detail"></p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="bs-docs-sidebar hidden-print hidden-xs hidden-sm" role="complementary">
                <ul class="nav bs-docs-sidenav">

                    <li>
                        <a href="#bookmark-1">标题1</a>
                    </li>
                    <li>
                        <a href="#bookmark-2">标签2</a>
                    </li>
                    <li>
                        <a href="#bookmark-3">textarea</a>
                    </li>
                    <li>
                        <a href="#bookmark-4">关联条目</a>
                    </li>
                    <li>
                        <a href="#bookmark-5">评论</a>
                    </li>
                </ul>
                <a class="back-to-top" href="#top">
                    返回顶部
                </a>
        </div>
    </div>
</div>
<!--END:main-->

<script type="text/javascript">
//load and decode rich text
$(function () {
    $("#basic-detail").html(HtmlDecode("<%= data.textarea %>"));
});
</script>

<%- include footer %>